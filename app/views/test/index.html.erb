<%= javascript_include_tag :defaults %>
<p>
<label for="region">Γεωγραφικό Διαμέρισμα:</label>
<br>
<%= collection_select(nil, :region,  @region,  :code, :description,
                      {:prompt   => "Επιλέξτε έναν νομό"},
                      {:onchange => "#{remote_function(:url  => {:action => "update_department"},
                                                       :with => "'region='+value")}"}) %>
</p>
<p>
<div id="department"><%= render :partial => 'department', :object => @department %>
</div>
</p>
<p>
<div id="municipality"><%= render :partial => 'municipality', :object => @municipality %>
</div>
</p>
<p>
<div id="admin_district"><%= render :partial => 'admin_district', :object => @admin_district %>
</div>
</p>
<p>
<div id="commune"><%= render :partial => 'commune', :object => @commune %>
</div>
</p>





